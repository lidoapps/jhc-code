<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<description>Spring 3 入门实例</description>

	<bean id="duke" class="cn.jhc.simple.Juggler"></bean>
	
	<bean id="duke2" class="cn.jhc.simple.Juggler">
		<constructor-arg value="15"></constructor-arg>
	</bean>
	
	<bean id="sonnet29" class="cn.jhc.simple.Sonnet29"></bean>
	
	<bean id="poeticDuke" class="cn.jhc.simple.PoeticJuggler">
		<constructor-arg value="15"></constructor-arg>
		<constructor-arg ref="sonnet29"></constructor-arg>
	</bean>
	
	<bean id="theStage" class="cn.jhc.simple.Stage" factory-method="getInstance"></bean>
	
	<bean id="auditorium" class="cn.jhc.simple.Auditorium"
		init-method="turnOnLights" destroy-method="turnOffLights">
	</bean>
	
	<bean id="kenny" class="cn.jhc.simple.Instrumentalist">
		<property name="song" value="Jingle Bells"></property>
		<property name="instrument" ref="saxophone"></property>
	</bean>
	
	<bean id="saxophone" class="cn.jhc.simple.Saxophone"></bean>
	
	<bean id="kenny2" class="cn.jhc.simple.Instrumentalist">
		<property name="song" value="Jingle Bells"></property>
		<property name="instrument">
			<bean class="cn.jhc.simple.Piano"></bean>
		</property>
	</bean>
	
	<bean id="oneManBand" class="cn.jhc.simple.OneManBand">
		<property name="instruments">
			<list>
				<bean class="cn.jhc.simple.Piano"></bean>
				<bean class="cn.jhc.simple.Saxophone"></bean>
			</list>
		</property>
	</bean>
</beans>
